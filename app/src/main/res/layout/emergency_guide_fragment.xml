<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:alpha="0.8"
    android:background="#F5F5F5"
    android:id="@+id/relativeLayout3">

    <androidx.constraintlayout.widget.ConstraintLayout

        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:alpha="0.8"
        android:background="@drawable/blurred_emerg"
        android:layout_weight="1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/home_btn_from_medical"
            android:layout_height="48dp"
            android:layout_width="48dp"
            android:background="@drawable/ic_arrow"
            android:drawableTint="#fff"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />


        <TextView
            android:id="@+id/med_title"
            android:layout_width="301dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="55dp"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="80dp"
            android:layout_marginEnd="55dp"
            android:layout_marginRight="55dp"
            android:fontFamily="@font/raleway_medium"
            android:gravity="center_horizontal|center_vertical"
            android:text="Emergency Guide"
            android:textColor="#FFFFFF"
            android:textSize="40sp"
            android:layout_centerHorizontal="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_centerVertical="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/choking_btn"
        android:layout_width="wrap_content"
        android:layout_height="117dp"
        android:layout_marginStart="49dp"
        android:layout_marginTop="324dp"
        android:layout_marginEnd="50dp"
        android:background="@drawable/buttonbordershadow"
        android:fontFamily="@font/raleway_medium"
        android:text="Choking"
        app:layout_constraintEnd_toStartOf="@id/passing_out_btn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/passing_out_btn"
        android:layout_width="wrap_content"
        android:layout_height="117dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="323dp"
        android:layout_marginEnd="48dp"
        android:background="@drawable/buttonbordershadow"
        android:fontFamily="@font/raleway_medium"
        android:text="Loss of \nConsciousness"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toEndOf="@id/choking_btn"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/home_btn_from_emergency"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@drawable/ic_arrow_back_24px"
        android:shadowColor="#F7FFFFFF"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/CPR_btn"
        android:layout_width="wrap_content"
        android:layout_height="117dp"
        android:layout_marginStart="139dp"
        android:layout_marginLeft="139dp"
        android:layout_marginTop="34dp"
        android:layout_marginEnd="138dp"
        android:layout_marginRight="138dp"
        android:background="@drawable/buttonbordershadow"
        android:fontFamily="@font/raleway_medium"
        android:text="How to Perform \nCPR"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/choking_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>