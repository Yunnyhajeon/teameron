<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:alpha="0.8"
    android:background="#F5F5F5">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:alpha="0.8"
        android:background="@drawable/blurred_emerg"
        android:layout_weight="1"
        >

        <Button
            android:id="@+id/home_btn_from_medical"
            android:layout_height="48dp"
            android:layout_width="48dp"
            android:background="@drawable/ic_arrow"
            android:drawableTint="#fff"
            />


        <TextView
            android:id="@+id/med_title"
            android:layout_width="301dp"
            android:layout_height="94dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_centerVertical="false"
            android:layout_marginStart="55dp"
            android:layout_marginLeft="55dp"
            android:layout_marginTop="80dp"
            android:layout_marginEnd="55dp"
            android:layout_marginRight="55dp"
            android:gravity="center_horizontal|center_vertical"
            android:text="Emergency Guide"
            android:fontFamily="@font/raleway_medium"
            android:textColor="#FFFFFF"
            android:textSize="40sp"
            />

    </RelativeLayout>
    <Button
        android:id="@+id/choking_btn"
        android:layout_width="150dp"
        android:layout_height="117dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="139dp"
        android:layout_marginLeft="139dp"
        android:layout_marginTop="325dp"
        android:layout_marginEnd="138dp"
        android:layout_marginRight="138dp"
        android:background="@drawable/buttonbordershadow"
        android:fontFamily="@font/raleway_medium"
        android:text="How to Prevent Choking" />

    <Button
        android:id="@+id/home_btn_from_emergency"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@drawable/ic_arrow_back_24px"
        android:shadowColor="#F7FFFFFF" />

    <Button
        android:id="@+id/CPR_btn"
        android:layout_width="150dp"
        android:layout_height="117dp"
        android:layout_below="@+id/choking_btn"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="139dp"
        android:layout_marginLeft="139dp"
        android:layout_marginTop="34dp"
        android:layout_marginEnd="138dp"
        android:layout_marginRight="138dp"
        android:background="@drawable/buttonbordershadow"
        android:fontFamily="@font/raleway_medium"
        android:text="How to Perform CPR" />


</RelativeLayout>